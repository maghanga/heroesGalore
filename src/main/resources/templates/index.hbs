{{#partial "content"}}
    <div class="row">
        <div class="col-md-6 text-center">
            <h4>Heroes</h4>
            <ol>
                {{#if heroes}}
                    {{#each heroes}}
                        <li>
                            <h5>Name: </h5>
                            <p>{{ hero.name }}</p>
                            <h5>Age: </h5>
                            <p> {{ hero.age }}</p>
                            <h5>Power: </h5>
                            <p>{{ hero.power }}</p>
                            <h5>Weakness: </h5>
                            <p>{{ hero.weakness }}</p>
                            <h5>Squad: </h5>
                            <p>{{ hero.heroSquad }}</p>
                        </li>
                    {{/each}}
                {{else}}

                    <p>No heroes!</p>
                {{/if}}
            </ol>
        </div>

        <div class="col-md-6 text-center">
            <h4>Squads</h4>
            <ol>
                {{#if squads}}
                    {{#each squads}}
                        <li>
                            <h5>Squad Name: </h5>
                            <p>{{ squadName }}</p>
                            <h5>Maximum number: </h5>
                            <p> {{ maxSize }}</p>
                            <h5>Purpose: </h5>
                            <p> {{ cause }}</p>
                        </li>>
                    {{/each}}
                {{else}}
                    <p>No squads!</p>
                {{/if}}
            </ol>
        </div>

    </div>

{{/partial}}

{{> layout.hbs}}